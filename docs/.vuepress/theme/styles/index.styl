@import 'theme-dark';
@import 'layout';
@import 'util';
@import 'scrollbar';
@import 'buttons';
@import 'layout-center';
@import 'header';
@import 'sidebar';
@import 'video';
@import 'alert-panels';

/*
	Root elements styles to force them to use 100% of the viewport
*/
html {
	background-color: $mainBgColor;
    height: 0;
    min-height: 100%;
    display: flex;
    flex-direction: column;
}

body {
	background-color: transparent;
    overflow-y: scroll;
    display: flex;
    flex: 1 0 auto;
    flex-direction: column;
	font-family: 'Inter', sans-serif;
}

.theme-container {
	min-height: 100%;
	display: flex;
	flex-direction: column;
}

main.page {
	display: flex;
	flex-direction: column;
	flex: 1 0 auto;
}

.theme-default-content {
	flex: 1 0 auto;
}

.content-footer {
	flex: 0 0 auto;
}

/*
	Scroll Bar
*/

html, pre {
	{scrollbar};
}

// apply scrolling by default excluding firefox due to trigger issues
html.smooth-scroll {
	scroll-behavior: smooth;
}

@supports (-moz-appearance: none) {
	html.smooth-scroll {
		scroll-behavior: auto;
	}
}

img[loading] {
	height: auto;
}

#app {
	height: 100%;
}

a {
	color: $linkColor;
	font-weight: bold;
}

code {
	word-break: break-word;
}

.theme-default-content code {
		background-color: $secondaryColorLightest;
}

svg.icon.outbound {
	color: $linkColor;
}

a.header-anchor {
	font-weight: 300;
}

a.header-anchor:hover {
	text-decoration: none !important;
}

h1, h2, h3, h4, h5 {
	font-family: 'Space Grotesk', monospace;
	font-weight: 500;
	color: $headingColor;
}

.theme-default-content:not(.custom) {
	& > h1 {
		padding-top: 2rem;
	}
}

:root {
	--accent-color: $accentColor;
	--text-color: $textColor;
	--border-color: $borderColor;
	--code-bg-color: $codeBgColor;
	--highlight-color: $highlightColor;
}
